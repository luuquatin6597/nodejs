<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
</head>

<body>
    <h1>Product List</h1>
    <a href="/api/products/add">Add New Product</a>

    <table border="1">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
        </tr>
        <% products.forEach(product=> { %>
            <tr>
                <td>
                    <%= product.id %>
                </td>
                <td>
                    <%= product.name %>
                </td>
                <td>
                    <%= product.price %>
                </td>
                <td>
                    <%= product.description %>
                </td>
            </tr>
            <% }); %>
    </table>
</body>

</html>